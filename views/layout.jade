!!!
html
  head
    if !isHome && meta.title
      title= meta.title + ' | ' + title  
    else
      title= description + ' | ' + title
    if meta.tags
      meta(name='description', content=description)
      meta(name='keywords', content=metatags)
    link(rel='stylesheet', href='/stylesheets/style.css')
    if theme
      link(rel='stylesheet', href='/themes/' + theme + '/css/style.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora')
  body
    #main
      #title= title

      ul#nav
        for page in pages
          li
            a(href='/' + page.slug)= page.meta.linktext || page.title

      .essay!= body
    <a href="https://github.com/katzgrau/essayist"><img style="position: fixed; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub"></a>